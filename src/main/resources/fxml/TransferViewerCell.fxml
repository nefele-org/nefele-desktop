    <BorderPane>

        <center>

            <VBox alignment="CENTER_LEFT">
                <BorderPane>

                    <left>
                        <HBox spacing="15" alignment="CENTER" >
                            <FontAwesomeIconView fx:id="iconOperation" glyphName="SERVER" size="32.0" />
