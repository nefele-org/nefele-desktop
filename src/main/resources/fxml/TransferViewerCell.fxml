        <bottom>
            <AnchorPane>
                <JFXProgressBar fx:id="progressStatus" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" />
            </AnchorPane>
        </bottom>
    </BorderPane>
</fx:root>
