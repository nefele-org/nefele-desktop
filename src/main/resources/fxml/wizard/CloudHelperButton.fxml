<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import com.jfoenix.controls.JFXButton?>

<fx:root type="JFXButton" alignment="CENTER" contentDisplay="CENTER" prefHeight="48.0"
         prefWidth="192.0" text=" " xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" >
    <graphic>

        <BorderPane prefWidth="160.0">

            <left>
                <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                    <MaterialDesignIconView fx:id="icon" size="28.0"/>
                </VBox>
            </left>

            <center>
                <VBox alignment="CENTER">
                    <Label fx:id="labelName" styleClass="text-h3"/>
                </VBox>
            </center>

        </BorderPane>

    </graphic>

    <tooltip>
        <Tooltip fx:id="tooltip"/>
    </tooltip>
</fx:root>
