<?import com.jfoenix.controls.JFXComboBox?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import org.nefele.ui.wizard.CloudHelper?>


<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
         type="NefeleContentPane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
         AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

    <BorderPane>

        <center>
            <HBox fx:id="wizardViewer">

                <!-- SELECT LANGUAGE -->
                <BorderPane fx:id="first" prefWidth="520">

                    <center>

                        <VBox alignment="CENTER" spacing="15">
                            <Label userData="WIZARD_SELECT_LANGUAGE" styleClass="h2"/>
                            <JFXComboBox fx:id="comboBoxLaunguage"/>
                        </VBox>

                    </center>

                </BorderPane>


                <!-- WELCOME MESSAGE -->
                <BorderPane fx:id="second" prefWidth="520">

                    <center>
                        <VBox spacing="30">
                            <Pane layoutX="50">
                                <FontAwesomeIconView glyphName="CLOUD" layoutX="88.0" layoutY="96" selectionFill="#571d1d"
                                                     size="128"
                                                     styleClass="header-awesome-logo-1"/>
                                <FontAwesomeIconView glyphName="CLOUD" layoutX="102.0" layoutY="96" selectionFill="#f21c1c"
                                                     size="128"
                                                     styleClass="header-awesome-logo-2"/>
                            </Pane>

                            <Label userData="WIZARD_WELCOME" styleClass="h2"/>
                            <JFXCheckBox fx:id="checkBoxTerms" userData="WIZARD_TERMS" />
                        </VBox>

                    </center>

                </BorderPane>


                <!-- ADD FIRST CLOUD -->
                <BorderPane fx:id="third" prefWidth="520">

                    <center>

                        <VBox spacing="30">

                            <Label userData="WIZARD_FIRST_CLOUD" styleClass="h2"/>
                            <JFXButton fx:id="buttonAddCloud" />

                        </VBox>

                    </center>

                </BorderPane>


                <!-- CLOUD HELPER -->
                <BorderPane fx:id="fourth" prefWidth="520">

                    <center>

                        <AnchorPane fx:id="contentCloudHelper">
                            <CloudHelper/>
                        </AnchorPane>

                    </center>

                </BorderPane>


                <!-- DEFAULT SETTINGS -->
                <BorderPane fx:id="fifth" prefWidth="520">

                    <center>

                        <VBox fx:id="contentDefaultSettings"/>

                    </center>

                </BorderPane>


                <!-- END WIZARD -->
                <BorderPane fx:id="sixth" prefWidth="520">

                    <center>

                        <VBox spacing="20">
                            <Label userData="WIZARD_END_MESSAGE" styleClass="text-h3"/>
                            <Label userData="WIZARD_END_LOADING" styleClass="text-h1"/>
                        </VBox>

                    </center>

                </BorderPane>


            </HBox>
        </center>


        <bottom>

            <VBox>

                <Separator/>

                <VBox alignment="CENTER_RIGHT">
                    <JFXButton contentDisplay="GRAPHIC_ONLY" fx:id="buttonForward" mnemonicParsing="false" text=" " styleClass="filebrowser-header-button">
                        <graphic>
                            <MaterialIconView strokeType="OUTSIDE" strokeWidth="0.0" text=" " glyphName="ARROW_FORWARD" size="36.0" />
                        </graphic>
                        <tooltip>
                            <Tooltip userData="ARCHIVE_HINT_FORWARD"/>
                        </tooltip>
                    </JFXButton>
                </VBox>

            </VBox>

        </bottom>

    </BorderPane>

</fx:root>
