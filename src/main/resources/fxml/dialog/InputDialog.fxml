<?import com.jfoenix.controls.JFXTextField?>
<fx:root prefHeight="170.0" prefWidth="300.0" type="NefeleContentPane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <BorderPane>
        <top>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <ImageView fx:id="ivIcon" fitHeight="32.0" fitWidth="32.0" />
                <Label fx:id="labelTitle" text=" " styleClass="text-h2" />
                <padding>
                    <Insets left="24" right="24" top="8" bottom="8" />
                </padding>
            </HBox>
        </top>
        <bottom>
            <HBox fx:id="buttonHBox" nodeOrientation="RIGHT_TO_LEFT" prefHeight="36.0" BorderPane.alignment="CENTER" spacing="5">
                <BorderPane.margin>
                    <Insets left="16" right="16" />
                </BorderPane.margin>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            </HBox>
        </bottom>
        <center>
            <StackPane>
                <JFXTextField fx:id="textField" />
                <padding>
                    <Insets right="24" left="24" />
                </padding>
            </StackPane>
        </center>
    </BorderPane>
</fx:root>
