<fx:root prefHeight="170.0" prefWidth="300.0" type="NefeleContentPane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <BorderPane>
      <top>
         <Pane prefHeight="51.0" prefWidth="300.0" BorderPane.alignment="CENTER">
            <ImageView fx:id="ivIcon" fitHeight="32.0" fitWidth="32.0" layoutX="20.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="labelTitle" layoutX="60.0" layoutY="9.0" text="Label">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </Pane>
      </top>
      <bottom>
         <HBox fx:id="buttonHBox" nodeOrientation="RIGHT_TO_LEFT" prefHeight="35.0" prefWidth="300.0" BorderPane.alignment="CENTER" spacing="5">
            <BorderPane.margin>
               <Insets left="15.0" right="15.0" />
            </BorderPane.margin>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </HBox>
      </bottom>
      <center>
         <ScrollPane fx:id="scrollMessage" hbarPolicy="NEVER" BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
               <Insets bottom="10.0" left="15.0" right="15.0"/>
            </BorderPane.margin>

            <Text fx:id="textMessage" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-shape" text="Text"/>
         </ScrollPane>
      </center>
   </BorderPane>
</fx:root>
