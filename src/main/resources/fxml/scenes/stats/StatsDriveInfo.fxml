<?import com.jfoenix.controls.JFXSpinner?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="StackPane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" styleClass="stats-card">

    <VBox spacing="5">

        <Label text=" " styleClass="stats-card-title, text-h2" fx:id="labelDriveName" />
        <Separator />

        <VBox styleClass="stats-card-box">

            <HBox styleClass="stats-card-box-content" spacing="5">

                <StackPane>
                    <JFXSpinner fx:id="spinner" />
                    <MaterialDesignIconView fx:id="icon" strokeType="OUTSIDE" strokeWidth="0.0" text=" " size="28.0"  />
                </StackPane>

                <Separator orientation="VERTICAL"/>

                <VBox spacing="2">
                    <HBox spacing="5">
                        <Label userData="STATSDRIVEINFO_CONTENT_3" />
                        <Label fx:id="labelTotalSpace" />
                    </HBox>
                    <HBox spacing="5">
                        <Label userData="STATSDRIVEINFO_CONTENT_4" />
                        <Label fx:id="labelTotalQuota" />
                    </HBox>
                    <HBox spacing="5">
                        <Label userData="STATSDRIVEINFO_CONTENT_2" />
                        <Label fx:id="labelStatus"/>
                    </HBox>
                </VBox>

            </HBox>

        </VBox>

    </VBox>

</fx:root>
